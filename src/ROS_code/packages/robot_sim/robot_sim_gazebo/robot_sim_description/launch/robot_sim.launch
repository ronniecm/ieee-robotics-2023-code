<?xml version="1.0"?>
<launch>
	<param name="robot_description" command="$(find xacro)/xacro $(find robot_sim)/robot_sim_description/urdf/robot_sim_camera.xacro use_nominal_extrinsics:=true add_plug:=true"/>
    
    <node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher">
      <param name="publish_frequency" type="double" value="50.0" />
    </node>

    <arg name="gui" default="True" />
    <param name="use_gui" value="$(arg gui)" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find realsense2_description)/rviz/urdf.rviz" required="true" />

</launch>
